<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:layout_gravity="center_horizontal" android:columnCount="12"
    android:orientation="horizontal">


    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <robin.stopmotion.SquashedPreview
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/view"
        />
        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/previewSeekBar" android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Skins"
                android:id="@+id/setSkins"
                android:layout_above="@+id/previewSeekBar" android:layout_alignParentLeft="true"/>

    </RelativeLayout>
</LinearLayout>
